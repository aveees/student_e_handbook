<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Safe Material Button (works on all API levels) -->
    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/bulsu_gold</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:textColor">@color/bulsu_gold</item>
    </style>

    <!-- Side Navigation Button -->
    <style name="SideNavButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/bona_nova_sc_bold</item>
        <item name="android:textSize">15sp</item>

        <item name="android:textStyle">bold</item>

        <item name="strokeColor">#C5D6A0</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

</resources>
