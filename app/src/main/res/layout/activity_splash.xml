<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashed_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/gradient_stage1"
    tools:context=".SplashActivity">

    <!-- 3D Logo -->
    <ImageView
        android:id="@+id/logo_eagle_3d"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:alpha="0"
        android:src="@drawable/bulsu_logo_3d"
        android:layout_gravity="center" />

    <!-- Flat Logo -->
    <ImageView
        android:id="@+id/logo_eagle_flat"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:alpha="0"
        android:src="@drawable/eagles_logo"
        android:layout_gravity="center" />

    <!-- Text and Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="120dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BULSU"
            android:textSize="34sp"
            android:textStyle="bold"
            android:alpha="0"
            android:textColor="#204B20"
            android:gravity="center" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bustos Campus"
            android:textSize="16sp"
            android:alpha="0"
            android:textColor="#204B20"
            android:gravity="center"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/get_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:alpha="0"
            android:layout_marginTop="24dp"
            android:backgroundTint="#38B34A"
            android:textColor="@android:color/white" />
    </LinearLayout>

</FrameLayout>
