<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashed_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_stage1"
    tools:context=".SplashActivity">

    <!-- Center everything inside this vertical container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <!-- Top Section: Text + Logo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- BULSU text -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BULSU"
                android:textSize="40sp"
                android:textStyle="bold"
                android:alpha="0"
                android:textColor="#204B20"
                android:fontFamily="@font/bona_nova_sc_bold"
                android:gravity="center"
                android:layout_marginBottom="60dp" />

            <!-- Flat Logo -->
            <ImageView
                android:id="@+id/logo_eagle_flat"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:alpha="0"
                android:src="@drawable/eagles_logo"
                android:layout_gravity="center" />
        </LinearLayout>

        <!-- Spacer -->
        <Space
            android:layout_width="0dp"
            android:layout_height="70dp" />

        <!-- Subtitle and Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bona_nova_sc_bold"
                android:text="Bustos Campus"
                android:textSize="20sp"
                android:alpha="0"
                android:textColor="#204B20"
                android:gravity="center" />


        </LinearLayout>

    </LinearLayout>
</FrameLayout>
