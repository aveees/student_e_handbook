<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_header"
    android:padding="16dp"
    android:elevation="4dp">

    <!-- Top bar with menu icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_arrow_left"
            android:contentDescription="Menu"
            app:tint="@android:color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/header_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HISTORY OF"
        android:textSize="15sp"
        android:textColor="#064c24"
        android:gravity="center"
        android:fontFamily="@font/bona_nova_sc_regular" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:text="BULACAN STATE UNIVERSITY"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#064c24"
        android:gravity="center"
        android:fontFamily="@font/bona_nova_sc_bold"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/header_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bustos Campus"
        android:textSize="15sp"
        android:textColor="#064c24"
        android:gravity="center"
        android:fontFamily="@font/bona_nova_sc_regular" />


</LinearLayout>
