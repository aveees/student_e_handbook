<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_stage2"
    android:gravity="center"
    tools:context=".GetStartedActivity">

    <!-- Building image background -->
    <ImageView
        android:id="@+id/admin_building"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/admin_bldg"
        android:scaleType="centerCrop"
        android:alpha="0.8"
        android:adjustViewBounds="true" />

    <!-- Gradient overlay for better text readability -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_overlay" />

    <!-- Top logos and university text -->
    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/univ_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BULACAN STATE UNIVERSITY"
            android:textColor="#1B1B1B"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/bona_nova_sc_bold"
            android:gravity="center"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/univ_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bustos Campus"
            android:textColor="#1B1B1B"
            android:textSize="20sp"
            android:fontFamily="@font/bona_nova_sc_regular"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@drawable/bulsu_logo"
                android:layout_marginEnd="12dp"
                android:contentDescription="BulSU Logo" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/eagles_logo"
                android:layout_marginTop="25dp"
                android:contentDescription="Eagle Logo" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/bustos_logo"
                android:layout_marginStart="12dp"
                android:contentDescription="Bustos Logo" />
        </LinearLayout>
    </LinearLayout>

    <!-- Center welcome text -->
    <LinearLayout
        android:id="@+id/welcome_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/top_section"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME,"
            android:textColor="@color/bulsu_gold"
            android:textSize="24sp"
            android:textStyle="italic"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginBottom="0dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/bulsuan_text"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:text="BulSUan!"
            android:textColor="@color/bulsu_gold"
            android:textSize="58sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_extra_bold"
            android:gravity="center"
            android:paddingTop="0dp"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/handbook_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STUDENT DIGITAL
            HANDBOOK"
            android:textColor="@color/bulsu_gold"
            android:textSize="22sp"
            android:fontFamily="@font/bona_nova_sc_bold"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:letterSpacing="0.08" />
    </LinearLayout>

    <!-- Buttons at the bottom -->
    <LinearLayout
        android:id="@+id/button_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_get_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GET STARTED"
            android:fontFamily="@font/montserrat_semibold"
            android:textAllCaps="true"
            android:paddingHorizontal="36dp"
            android:paddingVertical="12dp"
            android:layout_marginTop="12dp"
            style="@style/CustomMaterialButton"
            android:elevation="4dp"
            />



        <TextView
            android:id="@+id/about_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT US"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

</RelativeLayout>
