<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_stage2"
    android:gravity="center"
    tools:context=".GetStartedActivity">

    <!-- Building image background -->
    <ImageView
        android:id="@+id/admin_building"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/admin_bldg"
        android:scaleType="centerCrop"
        android:alpha="0.8"
        android:adjustViewBounds="true" />

    <!-- Gradient overlay for better text readability -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_overlay" />

    <!-- Top logos and university text -->
    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/bulsu_logo"
                android:layout_marginEnd="12dp"
                android:contentDescription="BulSU Logo" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/eagles_logo"
                android:contentDescription="Eagle Logo" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/bustos_logo"
                android:layout_marginStart="12dp"
                android:contentDescription="Bustos Logo" />
        </LinearLayout>

        <TextView
            android:id="@+id/univ_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BULACAN STATE UNIVERSITY"
            android:textColor="#1B1B1B"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/univ_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bustos Campus"
            android:textColor="#1B1B1B"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center" />
    </LinearLayout>

    <!-- Center welcome text -->
    <LinearLayout
        android:id="@+id/welcome_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/top_section"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME,"
            android:textColor="@color/bulsu_gold"
            android:textSize="35sp"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center" />

        <TextView
            android:id="@+id/bulsuan_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BulSUan!"
            android:textColor="@color/bulsu_gold"
            android:textSize="50sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_extra_bold"
            android:gravity="center"
            android:layout_marginTop="1dp" />

        <TextView
            android:id="@+id/handbook_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STUDENT DIGITAL HANDBOOK"
            android:textColor="@color/bulsu_gold"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:letterSpacing="0.1" />
    </LinearLayout>

    <!-- Buttons at the bottom -->
    <LinearLayout
        android:id="@+id/button_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp">

        <Button
            android:id="@+id/btn_get_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GET STARTED"
            android:background="@drawable/btn_green_outline"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingHorizontal="32dp"
            android:paddingVertical="10dp" />

        <TextView
            android:id="@+id/about_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT US"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

</RelativeLayout>
