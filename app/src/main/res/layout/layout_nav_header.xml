<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="309dp"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#083b1a"
    android:padding="16dp">

    <!-- Everything except footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Top bar with menu icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="start|center_vertical">

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_menu"
                android:contentDescription="Menu"
                app:tint="@color/bulsu_gold" />
        </LinearLayout>

        <!-- Top Menu Buttons -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <Button android:text="ABOUT" style="@style/SideNavButton" />
            <Button android:text="MISSION" style="@style/SideNavButton" />
            <Button android:text="VISION" style="@style/SideNavButton" />
            <Button android:text="GOALS" style="@style/SideNavButton" />
            <Button android:text="ACADEMIC CALENDAR" style="@style/SideNavButton" />
            <Button android:text="SCHEDULER" style="@style/SideNavButton" />
        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:text="BULSU"
            android:textSize="35sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:alpha="0.65"
            android:textColor="#C5D6A0"
            android:fontFamily="@font/bona_nova_sc_bold"
            android:layout_marginTop="4dp"
            android:layout_gravity="center" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/eagles_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/eagles_logo"
            android:contentDescription="BULSU Eagle Logo"
            android:layout_marginTop="8dp"
            android:alpha="0.65"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter" />

        <!-- Campus Text -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Bustos Campus"
            android:fontFamily="@font/bona_nova_sc_bold"
            android:alpha="0.65"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#C5D6A0"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- Footer (fixed at bottom) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="6dp"
        android:background="@drawable/side_button_bg"
        android:text="Bulacan State University - Bustos Campus\nStudent Handbook Â© 2025. All rights reserved."
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="11sp"
        android:textColor="#C5D6A0" />
</LinearLayout>
