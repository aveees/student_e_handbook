<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_header"
    android:padding="16dp"
    android:elevation="4dp">

    <!-- Top bar with menu icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu"
            app:tint="@android:color/black" />
    </LinearLayout>

    <!-- Logos section (horizontally aligned) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp">

        <ImageView
            android:id="@+id/eagles2_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/eagles_logo"
            android:contentDescription="Eagles Logo"
            android:adjustViewBounds="true"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/bustos2_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/bustos_logo"
            android:contentDescription="Bustos Logo"
            android:adjustViewBounds="true"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Title and subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:text="STUDENT E-HANDBOOK"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#064c24"
        android:gravity="center"
        android:fontFamily="@font/bona_nova_sc_bold"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bulacan State University"
        android:textSize="14sp"
        android:textColor="#064c24"
        android:gravity="center"
        android:fontFamily="@font/bona_nova_sc_bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bustos Campus"
        android:textSize="12sp"
        android:textColor="#064c24"
        android:gravity="center"
        android:fontFamily="@font/bona_nova_sc_regular" />


</LinearLayout>
